#!/usr/bin/env zsh
set -e

type -p brew >/dev/null || /bin/sh -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"

for file in "$PWD"/*; do
  name="$(basename "$file" .md)"
  [[ $name = bin ]] && dotname="$name" || dotname=".${name}"

  [[ "README script vscode" =~ $name ]] && continue

  ln -sfnv ${file#$HOME/} "${HOME}/${dotname}"
done

brew bundle --global --no-upgrade

# Install nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
command -v nvm >/dev/null || /bin/sh -c "$(curl -fsSL https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.1/install.sh)"

# Install oh-my-zsh
export ZSH="$HOME/.oh-my-zsh"
[ -f $ZSH/oh-my-zsh.sh ] && \. $ZSH/oh-my-zsh.sh
command -v omz >/dev/null || /bin/sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

./script/install_code_extensions

# set screenshots folder
mkdir -p ~/Pictures/screenshots
defaults write com.apple.screencapture location ~/Pictures/screenshots

echo "Done!"

