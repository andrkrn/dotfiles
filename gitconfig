[commit]
	gpgsign = true
[fetch]
  prune = true
[pull]
  rebase = true
[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
[init]
  defaultBranch = main
[alias]
	m = "commit -m '.'"
  r = "reset HEAD^"
  ri = "!git rebase -i HEAD~\"$1\" #"
  pp = "!git add . && git diff-index --quiet HEAD || git m && git push origin $(git rev-parse --abbrev-ref HEAD)"
